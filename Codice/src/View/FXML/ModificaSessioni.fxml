<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="932.0" stylesheets="@../CSS/NewStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#232730" height="90.0" stroke="#232730" strokeType="INSIDE" strokeWidth="0.0" width="932.0" />
      <Label fx:id="titleLabel" layoutX="14.0" layoutY="27.0" text="Modifica delle sessioni" textFill="#eceff4">
         <font>
            <Font name="System Bold" size="30.0" />
         </font></Label>
      <VBox layoutX="714.0" layoutY="110.0" prefHeight="235.0" prefWidth="204.0">
         <children>
            <Button fx:id="editSessionsButton" mnemonicParsing="false" onAction="#editSessionsOnAction" prefHeight="70.0" prefWidth="204.0" text="Modifica sessione">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="addSessioneButton" mnemonicParsing="false" onAction="#addSessioneOnAction" prefHeight="70.0" prefWidth="224.0" text="Aggiungi sessione">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="rimuoviSessioneButton" mnemonicParsing="false" onAction="#rimuoviSessioneOnAction" prefHeight="70.0" prefWidth="216.0" text="Rimuovi sessione">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <Button fx:id="confermaButton" layoutX="714.0" layoutY="677.0" mnemonicParsing="false" onAction="#confermaButtonOnAction" prefHeight="24.0" prefWidth="204.0" text="Fine" />
      <TableView fx:id="table" layoutX="11.0" layoutY="109.0" prefHeight="594.0" prefWidth="682.0">
         <columns>
            <TableColumn fx:id="nomeSessioneColumn" prefWidth="160.0" text="Titolo" />
            <TableColumn fx:id="inizioSessioneColumn" prefWidth="140.0" text="Inizio" />
            <TableColumn fx:id="fineSessioneColumn" prefWidth="92.0" text="Fine" />
            <TableColumn fx:id="salaSessioneColumn" prefWidth="75.0" text="Sala" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
