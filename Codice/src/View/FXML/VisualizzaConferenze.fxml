<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="932.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="90.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="932.0" />
      <Label layoutX="14.0" layoutY="27.0" text="Ricerca conferenze" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <HBox layoutX="14.0" layoutY="90.0" prefHeight="47.0" prefWidth="913.0">
         <children>
            <VBox prefHeight="99.0" prefWidth="503.0">
               <children>
                  <Label text="Inserisci date">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="27.0" prefWidth="497.0">
                     <children>
                        <DatePicker fx:id="dataInizioDP" promptText="Da">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                        <DatePicker fx:id="dataFineDP" promptText="A">
                           <HBox.margin>
                              <Insets left="30.0" top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="75.0" prefWidth="396.0">
               <children>
                  <RadioButton fx:id="filterBySedeRadioButton" mnemonicParsing="false" onAction="#activateSediChoiceBox" text="Filtra per sede">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </RadioButton>
                  <ChoiceBox fx:id="sedeChoice" disable="true" prefHeight="24.0" prefWidth="256.0">
                     <VBox.margin>
                        <Insets top="9.0" />
                     </VBox.margin>
                  </ChoiceBox>
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </VBox>
            <Button mnemonicParsing="false" onAction="#findButtonOnAction" prefHeight="24.0" prefWidth="275.0" text="Cerca">
               <HBox.margin>
                  <Insets right="20.0" top="37.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="166.0" prefHeight="75.0" prefWidth="438.0" />
      <TableView fx:id="tableConferenza" layoutX="14.0" layoutY="176.0" onMouseClicked="#visualizzaConferenzaOnAction" prefHeight="533.0" prefWidth="896.0">
        <columns>
          <TableColumn fx:id="nomeConferenzaColumn" editable="false" prefWidth="75.0" text="Nome" />
          <TableColumn fx:id="inizioConferenzaColumn" editable="false" prefWidth="75.0" text="Inizio" />
            <TableColumn fx:id="fineConferenzaColumn" editable="false" prefWidth="75.0" text="Fine" />
            <TableColumn fx:id="descrizioneColumn" editable="false" prefWidth="115.0" text="Descrizione" />
            <TableColumn fx:id="sedeColumn" editable="false" prefWidth="89.0" text="Sede" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
